{
  "name": "ToxicBlock",
  "description": "ネット上のテキストをAIが検閲します、現段階ではYouTubeとTwitchとX（Twitter）に対応しています。",
  "version": "1.1.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "options_page": "options.html",
  "content_scripts": [{
      "matches": ["https://www.youtube.com/*",
                  "https://studio.youtube.com/*",
                  "https://www.twitch.tv/*",
                  "https://twitter.com/*",
                  "https://x.com/*"],
      "all_frames": true,
      "js":      ["js/loader.js"],
      "run_at": "document_start"
  }],
  "web_accessible_resources": [{
      "resources": ["js/content.js",
                    "js/setting.js",
                    "js/program.js"],
      "matches":   ["https://www.youtube.com/*",
                    "https://studio.youtube.com/*",
                    "https://www.twitch.tv/*",
                    "https://twitter.com/*",
                    "https://x.com/*"]
  }],
  "host_permissions":  ["https://www.toxicblock.com/*"],
  "icons": {
    "16": "files/icon16.png",
    "32": "files/icon32.png",
    "48": "files/icon48.png",
    "128": "files/icon128.png"
  }
}
